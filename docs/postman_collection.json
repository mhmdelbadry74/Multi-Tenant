            "method": "PATCH",
            "url": {
              "raw": "{{base_url}}/admin/tenants/{{tenant_id}}/activate",
              "host": ["{{base_url}}"],
              "path": ["admin", "tenants", "{{tenant_id}}", "activate"]
            }
          }
        },
        {
          "name": "Delete Tenant",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/admin/tenants/{{tenant_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "tenants", "{{tenant_id}}"]
            }
          }
        }
      ]
