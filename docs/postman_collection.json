  "item": [
    {
      "name": "Admin APIs",
      "item": [
        {
          "name": "Create Tenant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"ACME Corporation\",\n  \"slug\": \"acme\",\n  \"db_name\": \"tenant_acme\",\n  \"db_user\": \"acme_user\",\n  \"db_pass\": \"acme_password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/tenants",
              "host": ["{{base_url}}"],
              "path": ["admin", "tenants"]
            }
          }
        },
        {
          "name": "List Tenants",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/admin/tenants",
              "host": ["{{base_url}}"],
              "path": ["admin", "tenants"]
            }
          }
        },
        {
          "name": "Get Tenant",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/admin/tenants/{{tenant_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "tenants", "{{tenant_id}}"]
            }
          }
        },
        {
          "name": "Update Tenant",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"ACME Corporation Updated\",\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/tenants/{{tenant_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "tenants", "{{tenant_id}}"]
            }
          }
        },
        {
          "name": "Suspend Tenant",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "{{base_url}}/admin/tenants/{{tenant_id}}/suspend",
              "host": ["{{base_url}}"],
              "path": ["admin", "tenants", "{{tenant_id}}", "suspend"]
            }
